
@model List<TakBazar.Entites.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description </td>
            <td><button>@Html.ActionLink("Edit", "Edit", "Category", new { ID = @item.ID }, null)</button>
          
   
                <button>
                    @Html.ActionLink(
            "Delete",
            "Delete",
            new { id = item.ID },
            new { onclick = "return confirm('Are you sure you wish to delete this article?');" })
                </button></td>

</tr>

            }
        }

    </tbody>
</table>
